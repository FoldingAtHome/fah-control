style "glossy-toolbar"="glossy-default"
{

   engine "pixmap"
   {

	# This tells gtk how to draw the toolbar
	image
	{
	  	function = BOX
		recolorable = TRUE
		shadow = OUT
		#file = "plain_background.png"
		file = "shadow_etched_out.png"
		border = {1,1,1,2}
		stretch = TRUE
	}

   }
}

